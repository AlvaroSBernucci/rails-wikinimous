<div class="container">
<div class="navbar">
  <%= link_to "Wikinimous", articles_path, class: "navbar-brand" %>
  <div class="btn btn-primary"><%= link_to "New Article", new_article_path, class: "text-reset text-decoration-none" %></div>
</div>
  <ul class="list-unstyled">
    <% @articles.each do |article| %>
      <li class="d-flex align-items-center justify-content-between border border-light-subtle p-2 mb-4">
        <div>
          <%= link_to article.title, article_path(article), class: "fs-2" %>
          <p class="fs-4"><%= article.content %></p>
        </div>
        <%= link_to article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-reset text-decoration-none" do %>
          <i class="fa-solid fa-xmark fs-1"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
